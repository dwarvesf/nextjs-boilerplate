{
  "name": "nextjs-boilerplate",
  "version": "1.0.0",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "test": "jest",
    "test:ci": "jest --env=jsdom --coverage --watchAll=false --maxWorkers=2",
    "format": "prettier -c --write \"*/**\"",
    "lint": "eslint . --ext .ts,.tsx,.js && stylelint '**/*.css'",
    "lint:fix": "eslint . --ext .ts,.tsx,.js --fix && stylelint '**/*.css' --fix",
    "postinstall": "husky install && yarn generate-icons",
    "generate-icons": "node ./scripts/generate-icon-components.js",
    "storybook": "start-storybook -p 6006 -s ./public",
    "build-storybook": "build-storybook -s ./public",
    "fetch-definitions": "swagger-typescript-api --no-client -p https://petstore.swagger.io/v2/swagger.json -o ./types -n schema.ts",
    "cypress:open": "cypress open"
  },
  "dependencies": {
    "@dwarvesf/react-hooks": "^0.4.0",
    "@dwarvesf/react-utils": "^0.2.1",
    "@headlessui/react": "^1.4.1",
    "@reach/auto-id": "^0.16.0",
    "@tailwindcss/forms": "^0.3.4",
    "classnames": "^2.3.1",
    "isomorphic-unfetch": "^3.1.0",
    "next": "11.1.2",
    "nprogress": "^0.2.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-hook-form": "^7.17.2",
    "react-hot-toast": "^2.1.1",
    "swr": "^1.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.0",
    "@commitlint/config-conventional": "^13.2.0",
    "@dwarvesf/react-eslint-config": "^0.1.2",
    "@prettier/plugin-xml": "^1.1.0",
    "@storybook/addon-actions": "^6.3.10",
    "@storybook/addon-essentials": "^6.3.10",
    "@storybook/addon-links": "^6.3.10",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/addon-storysource": "6.3.10",
    "@storybook/react": "^6.3.10",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.2",
    "@types/jest": "^27.0.2",
    "@types/node": "16.10.3",
    "@types/nprogress": "^0.2.0",
    "@types/react": "17.0.27",
    "@types/react-dom": "17.0.9",
    "@types/tailwindcss": "^2.2.1",
    "@typescript-eslint/eslint-plugin": "4.33.0",
    "@typescript-eslint/parser": "4.33.0",
    "autoprefixer": "^10.3.7",
    "axios": "^0.23.0",
    "babel-eslint": "10.x",
    "babel-jest": "^27.2.5",
    "babel-plugin-inline-react-svg": "^2.0.1",
    "cypress": "^8.6.0",
    "dotenv": "^10.0.0",
    "eslint": "7.x",
    "eslint-config-airbnb": "18.x",
    "eslint-config-airbnb-typescript": "14.0.1",
    "eslint-config-next": "^11.1.2",
    "eslint-config-prettier": "8.x",
    "eslint-config-react": "1.x",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-flowtype": "6.1.0",
    "eslint-plugin-import": "2.x",
    "eslint-plugin-jsx-a11y": "6.x",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.26.1",
    "eslint-plugin-react-hooks": "4.x",
    "eslint-plugin-testing-library": "4.12.4",
    "husky": "^7.0.2",
    "jest": "^27.2.5",
    "jest-dom": "^4.0.0",
    "lint-staged": "^11.2.1",
    "postcss": "^8.3.9",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "storybook-addon-next-router": "^3.0.8",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^22.0.0",
    "swagger-typescript-api": "^9.3.0",
    "tailwindcss": "2.2.16",
    "ts-jest": "^27.0.5",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "twin.macro": "2.7.0",
    "typescript": "4.4.3"
  },
  "license": "ISC",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{json,css,scss,md}": [
      "prettier --write"
    ],
    "**/*.css": "stylelint --fix",
    "**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
