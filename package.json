{
  "name": "nextjs-boilerplate",
  "version": "1.0.0",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "test": "jest",
    "test:ci": "jest --env=jsdom --coverage --watchAll=false --maxWorkers=2",
    "format": "prettier -c --write \"*/**\"",
    "lint": "eslint . --ext .ts,.tsx,.js && stylelint '**/*.css'",
    "lint:fix": "eslint . --ext .ts,.tsx,.js --fix && stylelint '**/*.css' --fix",
    "postinstall": "husky install && yarn generate-icons",
    "generate-icons": "node ./scripts/generate-icon-components.js",
    "storybook": "start-storybook -p 6006 -s ./public",
    "build-storybook": "build-storybook -s ./public",
    "fetch-definitions": "swagger-typescript-api --no-client -p ./libs/swagger.json -o ./types -n schema.ts",
    "cypress:open": "cypress open"
  },
  "dependencies": {
    "@dwarvesf/react-hooks": "^0.5.1",
    "@dwarvesf/react-utils": "^0.3.0",
    "@headlessui/react": "^1.4.2",
    "@reach/auto-id": "^0.16.0",
    "@tailwindcss/forms": "^0.4.0",
    "classnames": "^2.3.1",
    "isomorphic-unfetch": "^3.1.0",
    "next": "12.0.7",
    "nprogress": "^0.2.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-hook-form": "^7.21.2",
    "react-hot-toast": "^2.1.1",
    "swr": "^1.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@dwarvesf/react-eslint-config": "^0.1.2",
    "@prettier/plugin-xml": "^1.1.0",
    "@storybook/addon-actions": "^6.4.9",
    "@storybook/addon-essentials": "^6.4.9",
    "@storybook/addon-links": "^6.4.9",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/addon-storysource": "6.4.9",
    "@storybook/react": "^6.4.9",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@types/jest": "^27.0.3",
    "@types/node": "16.11.12",
    "@types/nprogress": "^0.2.0",
    "@types/react": "17.0.37",
    "@types/react-dom": "17.0.11",
    "@types/tailwindcss": "^2.2.4",
    "@typescript-eslint/eslint-plugin": "5.6.0",
    "@typescript-eslint/parser": "5.6.0",
    "autoprefixer": "^10.4.0",
    "axios": "^0.24.0",
    "babel-eslint": "10.x",
    "babel-jest": "^27.4.4",
    "babel-plugin-inline-react-svg": "^2.0.1",
    "cypress": "^9.1.1",
    "dotenv": "^10.0.0",
    "eslint": "8.4.1",
    "eslint-config-airbnb": "19.0.2",
    "eslint-config-airbnb-typescript": "16.1.0",
    "eslint-config-next": "^12.0.7",
    "eslint-config-prettier": "8.x",
    "eslint-config-react": "1.x",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-flowtype": "8.0.3",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.27.1",
    "eslint-plugin-react-hooks": "4.3.0",
    "eslint-plugin-testing-library": "5.0.1",
    "husky": "^7.0.4",
    "jest": "^27.4.4",
    "jest-dom": "^4.0.0",
    "lint-staged": "^12.1.2",
    "postcss": "^8.4.4",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "storybook-addon-next-router": "^3.1.0",
    "stylelint": "^14.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^24.0.0",
    "swagger-typescript-api": "^9.3.1",
    "tailwindcss": "3.0.0",
    "ts-jest": "^27.1.1",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "4.5.3"
  },
  "license": "ISC",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{json,css,scss,md}": [
      "prettier --write"
    ],
    "**/*.css": "stylelint --fix",
    "**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
